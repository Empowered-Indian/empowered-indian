{
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "pnpm": "^10.20.0"
  },
  "packageManager": "pnpm@10.20.0",
  "scripts": {
    "dev": "turbo run dev --parallel --filter=frontend --filter=backend",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "lint:frontend": "turbo run lint --filter=frontend",
    "lint:backend": "turbo run lint --filter=backend",
    "lint:upload-scripts": "turbo run lint --filter=mplads-api-automation",
    "format": "turbo run format",
    "format:check": "turbo run format:check",
    "format:frontend": "turbo run format --filter=frontend",
    "format:backend": "turbo run format --filter=backend",
    "format:upload-scripts": "turbo run format --filter=mplads-api-automation",
    "clean": "rm -rf node_modules backend/node_modules frontend/node_modules upload-scripts/node_modules packages/*/node_modules",
    "reinstall": "pnpm clean && pnpm install"
  },
  "devDependencies": {
    "eslint-config": "workspace:*",
    "eslint": "^9.30.1",
    "nodemon": "^3.0.2",
    "prettier": "^3.3.3",
    "prettier-config": "workspace:*",
    "turbo": "^2.5.6"
  },
  "prettier": "prettier-config"
}

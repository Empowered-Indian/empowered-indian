# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/database_name?retryWrites=true&w=majority&appName=Cluster0
DATABASE_NAME=your_database_name

# Default Lok Sabha term for backend filtering
# Use 18 as default when no ls_term is specified
DEFAULT_LS_TERM=18

# Database Connection Pool Configuration (optional - defaults provided)
# Production: maxPoolSize=50, Development: maxPoolSize=10
DB_MAX_POOL_SIZE=50
DB_MIN_POOL_SIZE=5
DB_MAX_IDLE_TIME_MS=30000
DB_SERVER_SELECTION_TIMEOUT_MS=10000
DB_SOCKET_TIMEOUT_MS=45000
DB_CONNECT_TIMEOUT_MS=10000
DB_RETRY_WRITES=true
DB_WRITE_CONCERN=majority
DB_BUFFER_COMMANDS=true
DB_HEARTBEAT_FREQUENCY_MS=10000
DB_APP_NAME=MPLADS-Dashboard

# Server Configuration
PORT=5000
NODE_ENV=development

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# JWT Configuration (REQUIRED FOR AUTHENTICATION)
# Generate a strong secret key for JWT token signing
# You can use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secure_jwt_secret_key_here_change_this_in_production
JWT_EXPIRES_IN=7d

# API Configuration
API_VERSION=1.0.0

# Rate Limiting Configuration (optional)
ENABLE_RATE_LIMIT=true
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Cache Configuration (seconds)
CACHE_TTL_SUMMARY=86400
CACHE_TTL_ANALYTICS=86400
CACHE_TTL_EXPENDITURES=21600
CACHE_TTL_WORKS=43200

# Optional: Redis Configuration for Distributed Caching
# REDIS_URL=redis://localhost:6379

# Email Configuration (do not commit real secrets)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@example.com
EMAIL_APP_PASSWORD=your_email_app_password
EMAIL_FROM_NAME=Empowered Indian

# Frontend URL for verification links
FRONTEND_URL=http://localhost:5173

# Sentry (not secret, but environment-specific projects recommended)
SENTRY_DSN=your_sentry_dsn_here
